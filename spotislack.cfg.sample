#############################
# Configuration for Spotify
[spotify]
# Your Spotify Username
spotipy_username = <username>

# get your app credentials here: https://developer.spotify.com/dashboard/login
spotipy_client_id = <client_id>
spotipy_client_secret = <client_secret>

# here even an invalid URL is sufficient. Set it in the app settings
spotipy_redirect_uri = <some url>

### End of Config
